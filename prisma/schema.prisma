generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:book.db"
}

model Book {
  id         Int     @id @default(autoincrement())
  nameBook   String
  author     String
  genre      String?
  publishing String
  price      Float
  path_img   String
  status     String?
  href_name  String?
  Genre      Genre?  @relation(fields: [genre], references: [genre_name])
}

model Genre {
  genre_name String  @id
  href_name  String?
  Book       Book[]
}
